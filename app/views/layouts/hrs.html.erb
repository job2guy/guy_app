        <div id="content">
        	
            <p>
                <%- if show_title? -%>
                <h1><%=h yield(:title) %></h1>
                <%- end -%>
            </p>
            <p>
                <%- flash.each do |name, msg| -%>
                <%= content_tag :div, msg, :id => "flash_#{name}" %>
                <%- end -%>
          	</p>
            <p>
                <%= yield %>
            </p>
        </div>
