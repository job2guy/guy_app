<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
	<title><%= h(yield(:title) || "Login") %></title>
	<%= stylesheet_link_tag 'stylelog' %>
	<%= javascript_include_tag 'jquery', 'jquery-ui', 'jrails' %>
	<%= yield(:head) %>
	<script>
	$(function() {
  		$("#txtInput").focus();
	});
</script>
</head>

<body>
	<% form_for @user_session, :url => user_session_path do |f| %>
	<center>
		<%- flash.each do |name, msg| -%>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <%- end -%>
  	<%= f.error_messages %>
	</center>
	<div id="layer01_holder">
	  <div id="left"></div>
	  <div id="center"></div>
	  <div id="right"></div>
	</div>

<div id="layer02_holder">
  <div id="left"></div>
  <div id="center"></div>
  <div id="right"></div>
</div>

<div id="layer03_holder">
  <div id="left"></div>
  <div id="center">
  <table width="100%" border="0" cellspacing="0" cellpadding="0">
  <tr>
    <td>
      <label>User Name  
      <%= f.text_field :login ,:id=>"txtInput"%>
      </label>
      <label>Password  
      <%= f.password_field :password ,:style=>"margin-top:5px;"%>
      </label>
      <label>
      	<%= f.check_box :remember_me %><%= f.label :remember_me %></label>
      <label><%= f.submit "Login" %></label>
	</td>
  </tr>
</table>
  </div>
  <div id="right"></div>
</div>

<div id="layer04_holder">
  <div id="left"></div>
  <div id="center">click here for <%=link_to "Register", signup_path %><br/>
  If you forgot your password<%=link_to " click here" , new_password_reset_path %></div>
  <div id="right"></div>
</div>

<div id="layer05_holder">
  <div align="left">Copyright Â© 2010 , ROR design</div>
</div>
<% end %>
</body>
</html>