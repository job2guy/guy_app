<%title "Listing roles"%>
<table border=1>
  <tr><th>Name</th><th>Title</th><th colspan=2>Action</th>
  </tr>

<% @roles.each do |role| %>
  <tr>
  	<td><%=role.name.capitalize%></td>
	<td><%=role.title%></td>
    <td><%= link_to 'Edit', edit_role_path(role) %></td>
    <td><%= link_to 'Destroy', role, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New role', new_role_path %>